<h1>
  Payment Results
</h1>

<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= @round_apr %>
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <%= @years %>
  </dd>

  <dt>
    Principal
  </dt>
  <dd>
    <%= "$"+number_with_precision(@prin, :precision => 2, :delimiter => ',') %>
  </dd>

  <dt>
    Payment
  </dt>
  <dd>
    <%= "$"+number_with_precision(@result, :precision => 2, :delimiter => ',') %>
  </dd>
</dl>

